{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "name": {
          "type": "string",
          "description": "The user's name."
        }
      },
      "required": ["uid", "email", "name"]
    },
    "workout": {
      "title": "Workout",
      "description": "A workout session.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the workout."
        },
        "date": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time of the workout."
        },
        "duration": {
            "type": "number",
            "description": "The duration of the workout in minutes."
        },
        "exercises": {
            "type": "array",
            "items": {
                "$ref": "#/entities/exercise"
            }
        }
      },
      "required": ["name", "date"]
    },
    "exercise": {
        "title": "Exercise",
        "description": "An exercise within a workout.",
        "type": "object",
        "properties": {
            "name": {
                "type": "string"
            },
            "sets": {
                "type": "number"
            },
            "reps": {
                "type": "number"
            },
            "weight": {
                "type": "number"
            }
        },
        "required": ["name", "sets", "reps", "weight"]
    }
  },
  "auth": {
    "providers": ["email-password"]
  },
  "firestore": {
    "/users/{userId}/workouts/{workoutId}": {
        "schema": {
          "$ref": "#/entities/workout"
        },
        "description": "Workouts for a specific user."
      }
  }
}
